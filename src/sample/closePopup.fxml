<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.ClosePopupController"
			prefHeight="100.0" prefWidth="200.0" alignment="CENTER" spacing="15" stylesheets="@generalStyle.css, @closePopupStyle.css">

	<Label text="Are you sure you want to exit?" fx:id="confirmMsg" />
	<HBox alignment="CENTER" spacing="20">
		<Button text="Yes" fx:id="yesButton" onMouseClicked="#yesClicked" minWidth="60"/>
		<Button text="No" fx:id="noButton" onMouseClicked="#noClicked" minWidth="60"/>
	</HBox>


</VBox>
